#!/bin/sh

PATH=/bin:/usr/bin:/sbin:/usr/sbin

mkdir -p -Z User::Home -m 755 /opt/dbspace/user

export `tzplatform-get --user $2 TZ_USER_NAME`
export `tzplatform-get --user $2 TZ_USER_APP`

mkdir -p -Z User::Home -m 770 /opt/dbspace/user/$2
chown $TZ_USER_NAME:system_share /opt/dbspace/user/$2
find $TZ_USER_APP -type d \( -name "data" -o -name "cache" \) -exec chown $TZ_USER_NAME:system_share {} \;
find $TZ_USER_APP -type d \( -name "data" -o -name "cache" \) -exec chmod 2775 {} \;

pkg_initdb --uid $2
